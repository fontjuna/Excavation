<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBakckground"
    android:orientation="vertical"
    tools:context="MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilLabelFace"
            android:gravity="center"
            android:text="@string/distance"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilLabelFace"
            android:gravity="center"
            android:text="@string/instrument_height"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilLabelFace"
            android:gravity="center"
            android:text="@string/start_of_level"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilLabelFace"
            android:gravity="center"
            android:text="@string/end_of_level"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilLabelFace"
            android:gravity="center"
            android:text="@string/different_level"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/length_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilTextFace"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:id="@+id/ih_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilTextFace"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:id="@+id/start_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilTextFace"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:id="@+id/end_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilTextFace"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:id="@+id/deep_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilTextFace"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

    </LinearLayout>

    <include layout="@layout/line_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilLabelFace"
            android:gravity="center"
            android:text="@string/distance_from_start"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilLabelFace"
            android:gravity="center"
            android:text="@string/staff_value"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilLabelFace"
            android:gravity="center"
            android:text="@string/plan_level"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilLabelFace"
            android:gravity="center"
            android:text="@string/digging_level"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/distance_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilTextFace"
            android:gravity="center"
            android:text="0"
            android:textColor="#0000ff"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:id="@+id/staff_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilTextFace"
            android:gravity="center"
            android:text="0"
            android:textColor="#ff0000"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:id="@+id/level_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilTextFace"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

        <TextView
            android:id="@+id/ground_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:background="@color/CivilTextFace"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/CivilText"
            android:textSize="@dimen/civil_text"/>

    </LinearLayout>

    <include layout="@layout/line_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_win"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/result_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="right"
                android:hint="@string/history"
                android:textSize="16sp"/>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/previuos_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBakckground"
                android:gravity="right"
                android:hint="@string/result"
                android:textSize="20sp"/>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/input_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTextFace"
                android:gravity="right"
                android:hint="@string/expression"
                android:padding="4dp"
                android:textSize="20sp"/>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/button_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/button_length"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="@string/distance"
                android:textColor="@color/colorButtonText2"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/button_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="("
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text=")"
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_ac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="AC"
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="C"
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/button_ih"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="@string/instrument_height"
                android:textColor="@color/colorButtonText2"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/button_sqrt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="√"
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_pow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="xⁿ"
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_del"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="←"
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_divide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="÷"
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/button_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="@string/start_of_level"
                android:textColor="@color/colorButtonText2"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="7"
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="8"
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="9"
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_by"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="×"
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/button_end"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="@string/end_of_level"
                android:textColor="@color/colorButtonText2"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="4"
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="5"
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="6"
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="-"
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/button_deep"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="@string/different_level"
                android:textColor="@color/colorButtonText2"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="1"
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="2"
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="3"
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="+"
                android:textColor="@color/colorButtonText1"
                android:textSize="@dimen/button_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/button_distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="@string/distance_from_start"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/button_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="@string/reset"
                android:textColor="@color/colorButtonText1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="0"
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_dot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="."
                android:textColor="@color/colorButtonText0"
                android:textSize="@dimen/button_text"/>

            <TextView
                android:id="@+id/button_go"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/button_padding"
                android:soundEffectsEnabled="true"
                android:text="="
                android:textColor="#ff0000"
                android:textSize="@dimen/button_text"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
